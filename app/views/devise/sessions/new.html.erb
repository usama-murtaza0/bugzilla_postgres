<div class="login-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 class="text-center">Log in</h2>       
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email", placeholder: "Email", :required => 'required' %>
    </div>
    
    <div class="form-group">
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>

    <div class="form-group">
      <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="clearfix">
        <label class="float-left form-check-label">
          <%= f.check_box :remember_me %> Remember Me
        </label>
      </div>
    <% end %>
    
  <% end %>
  <div class="hint-text">Not an old user? <a href="<%= new_user_registration_path %>">Create Account</a></div>
</div>

