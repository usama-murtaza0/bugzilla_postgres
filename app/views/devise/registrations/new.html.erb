<div class="signup-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <h2>Sign Up</h2>
    <p>Please fill in this form to create an account!</p>
    <hr>
    <div class="form-group">
      <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Full Name", :required => 'required' %>     	
    </div>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", placeholder: "Email Address", :required => 'required' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "Password", :required => 'required' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "Confirm Password", :required => 'required' %>
    </div>

    <div class="form-group">
      <%= f.select :user_type, ['Manager', 'QA', 'Developer'], {}, { class: "form-control", id: "user_type" } %>
    </div>

    <div class="form-group">
      <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
    </div>

  <div class="hint-text">Already have an account? <a href="<%= new_user_session_path %>">Login here</a></div>
  <% end %>
</div>